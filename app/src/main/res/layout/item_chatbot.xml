<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/bot_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bot_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/casion_logo_circle"
            android:layout_marginEnd="8dp"/>

        <LinearLayout
            android:id="@+id/bot_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bot_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Casion"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_bot_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hai, tuan"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bot_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00 AM"
                android:textColor="@color/black"
                android:layout_gravity="start"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_profile"
            android:layout_marginEnd="8dp"/>

        <LinearLayout
            android:id="@+id/user_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_user_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hai, nona"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/user_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:05 AM"
                android:textColor="@color/black"
                android:layout_gravity="start"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
